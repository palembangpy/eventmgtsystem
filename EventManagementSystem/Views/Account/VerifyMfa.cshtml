@{
    ViewData["Title"] = "Two-Factor Authentication";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-full">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="h-full bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50">
    <div class="min-h-full flex items-center justify-center py-12 px-4">
        <div class="max-w-md w-full">
            <div class="text-center mb-8">
                <div
                    class="mx-auto h-16 w-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg animate-pulse">
                    <i class="fas fa-shield-alt text-white text-2xl"></i>
                </div>
                <h2 class="mt-6 text-3xl font-extrabold text-gray-800">Two-Factor Authentication</h2>
                <p class="mt-2 text-sm text-gray-600">Enter the 6-digit code from your authenticator app</p>
            </div>

            <div class="bg-white rounded-2xl shadow-2xl p-8">
                <form asp-action="VerifyMfa" method="post">
                    <div asp-validation-summary="ModelOnly"
                        class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg text-red-700 text-sm"></div>

                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Authentication Code</label>
                        <input type="text" name="code" maxlength="6" pattern="[0-9]{6}" required
                            class="block w-full text-center text-3xl font-bold tracking-widest px-4 py-4 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition"
                            placeholder="000000" autocomplete="off" />
                    </div>

                    <button type="submit"
                        class="w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-lg text-sm font-medium text-white bg-gradient-to-r from-purple-500 to-pink-600 hover:from-purple-600 hover:to-pink-700 transform hover:scale-105 transition-all duration-200">
                        <i class="fas fa-check-circle mr-2"></i>Verify Code
                    </button>
                </form>

                <div class="mt-6 bg-blue-50 border-l-4 border-blue-400 p-4 rounded-r-lg">
                    <p class="text-blue-800 text-sm">
                        <i class="fas fa-info-circle mr-2"></i>
                        <strong>Note:</strong> Open your authenticator app (Google Authenticator, Authy, etc.) to get
                        your 6-digit code.
                    </p>
                </div>

                <div class="mt-6 text-center">
                    <a asp-action="Login" class="text-sm font-medium text-blue-600 hover:text-blue-500 transition">
                        <i class="fas fa-arrow-left mr-1"></i>Cancel and Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
@model EventManagementSystem.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
    var safeReturnUrl = Url.IsLocalUrl(ViewData["ReturnUrl"]?.ToString())
        ? ViewData["ReturnUrl"]?.ToString()
        : Url.Action("Index", "Home");
}

<!DOCTYPE html>
<html lang="en" class="h-full">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="h-full bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50">
    <div class="min-h-full flex items-center justify-center px-4">
        <div class="max-w-md w-full space-y-8">

            <!-- Logo -->
            <div class="text-center">
                <div
                    class="mx-auto h-16 w-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-xl rotate-12 hover:rotate-0 transition duration-300">
                    <i class="fas fa-calendar-check text-white text-2xl"></i>
                </div>

                <h2
                    class="mt-6 text-4xl font-extrabold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                    Event Management System
                </h2>

                <p class="mt-2 text-sm text-gray-600">
                    Sign in to manage your events
                </p>
            </div>

            <div class="bg-white rounded-2xl shadow-2xl p-8 space-y-6">

                <!-- Social Login -->
                <div class="space-y-3">

                    <!-- Google -->
                    <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                        <input type="hidden" name="provider" value="Google" />
                        <input type="hidden" name="returnUrl" value="@safeReturnUrl" />
                        <button type="submit"
                            class="w-full flex items-center justify-center px-4 py-3 border rounded-xl hover:border-blue-500 hover:shadow-md transition">
                            <img src="https://www.svgrepo.com/show/355037/google.svg" class="w-5 h-5 mr-3" />
                            <span class="font-medium">Continue with Google</span>
                        </button>
                    </form>

                    <!-- GitHub -->
                    <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                        <input type="hidden" name="provider" value="GitHub" />
                        <input type="hidden" name="returnUrl" value="@safeReturnUrl" />
                        <button type="submit"
                            class="w-full flex items-center justify-center px-4 py-3 bg-gray-900 text-white rounded-xl hover:bg-black hover:shadow-md transition">
                            <i class="fab fa-github text-xl mr-3"></i>
                            Continue with GitHub
                        </button>
                    </form>

                    @* <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                        <input type="hidden" name="provider" value="Apple" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <button type="submit"
                            class="w-full group flex items-center justify-center px-4 py-3 border-2 border-black bg-black rounded-xl hover:bg-gray-900 hover:shadow-lg transition-all duration-200">
                            <i class="fab fa-apple text-white text-xl mr-3"></i>
                            <span class="text-white font-medium">Continue with Apple</span>
                        </button>
                    </form> *@
                </div>

                <!-- Divider -->
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-3 bg-white text-gray-500">Or sign in with email</span>
                    </div>
                </div>

                <!-- Email Login -->
                <form asp-action="Login" method="post" class="space-y-5">

                    <div asp-validation-summary="ModelOnly" class="bg-red-100 text-red-700 p-3 rounded-lg text-sm">
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input asp-for="Email"
                            class="w-full rounded-xl border px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                        <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                        <input asp-for="Password" type="password"
                            class="w-full rounded-xl border px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                        <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
                    </div>

                    <div class="flex justify-between items-center text-sm">
                        <label class="flex items-center space-x-2">
                            <input asp-for="RememberMe" type="checkbox" class="rounded border">
                            <span>Remember me</span>
                        </label>

                        <a href="#" class="text-blue-600 hover:underline">Forgot password?</a>
                    </div>

                    <button type="submit"
                        class="w-full py-3 rounded-xl text-white bg-gradient-to-r from-blue-500 to-purple-600 hover:opacity-90 transition shadow-lg">
                        <i class="fas fa-sign-in-alt mr-2"></i>
                        Sign In
                    </button>
                </form>

                <div class="border-t pt-4 text-center text-sm">
                    Donâ€™t have an account?
                    <a asp-action="Register" class="text-blue-600 font-medium hover:underline">
                        Create one
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
@{
    ViewData["Title"] = "Account Locked";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-full">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="h-full bg-gradient-to-br from-red-50 via-orange-50 to-yellow-50">
    <div class="min-h-full flex items-center justify-center py-12 px-4">
        <div class="max-w-md w-full">
            <div class="bg-white rounded-2xl shadow-2xl p-8 text-center">
                <div class="mx-auto w-24 h-24 bg-red-100 rounded-full flex items-center justify-center mb-6">
                    <i class="fas fa-lock text-red-600 text-4xl"></i>
                </div>

                <h2 class="text-3xl font-bold text-gray-800 mb-4">Account Locked</h2>

                <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg mb-6 text-left">
                    <p class="text-red-800 font-medium mb-2">Too Many Failed Attempts</p>
                    <p class="text-red-700 text-sm">
                        Your account has been temporarily locked due to multiple failed login attempts. This is a
                        security measure to protect your account.
                    </p>
                </div>

                <div class="bg-blue-50 rounded-xl p-6 mb-6 text-left">
                    <h3 class="font-bold text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-clock text-blue-500 mr-2"></i>
                        What happens next?
                    </h3>
                    <ul class="list-disc list-inside space-y-2 text-sm text-gray-700">
                        <li>Your account will be automatically unlocked in <strong>15 minutes</strong></li>
                        <li>You can try logging in again after the lockout period</li>
                        <li>Make sure you're using the correct password</li>
                    </ul>
                </div>

                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-lg mb-6 text-left">
                    <p class="text-yellow-800 text-sm">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        <strong>Forgot your password?</strong> You can reset it once the lockout period expires.
                    </p>
                </div>

                <div class="space-y-3">
                    <a asp-action="Login"
                        class="block w-full py-3 px-4 bg-gray-200 text-gray-700 rounded-xl hover:bg-gray-300 transition font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>Back to Login
                    </a>
                    <a href="/"
                        class="block w-full py-3 px-4 bg-blue-500 text-white rounded-xl hover:bg-blue-600 transition font-medium">
                        <i class="fas fa-home mr-2"></i>Go to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
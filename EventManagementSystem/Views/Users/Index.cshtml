@model IEnumerable<EventManagementSystem.Models.DTO.UserDto>
@{
    ViewData["Title"] = "Users";
}

<div class="mb-4 flex justify-between items-center">
    <div>
        <label class="mr-2">Filter by Type:</label>
        <select onchange="window.location.href='?userType=' + this.value" class="border rounded px-3 py-2">
            <option value="">All Users</option>
            @foreach (var type in ViewBag.UserTypes)
            {
                <option value="@type" selected="@(ViewBag.SelectedType == type)">@type</option>
            }
        </select>
    </div>
    <a asp-action="Create" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
        <i class="fas fa-plus mr-2"></i>Add New User
    </a>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Phone</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var user in Model)
            {
                <tr>
                    <td class="px-6 py-4">@user.Name</td>
                    <td class="px-6 py-4">@user.Email</td>
                    <td class="px-6 py-4">
                        <span class="px-2 py-1 text-xs rounded @(user.UserType == "Speaker" ? "bg-blue-100 text-blue-800" : user.UserType == "Volunteer" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                            @user.UserType
                        </span>
                    </td>
                    <td class="px-6 py-4">@(user.Phone ?? "-")</td>
                    <td class="px-6 py-4 space-x-2">
                        <a asp-action="Details" asp-route-id="@user.Id" class="text-blue-600 hover:text-blue-800">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="text-yellow-600 hover:text-yellow-800">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="text-red-600 hover:text-red-800">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model EventManagementSystem.Models.DTO.UserDto
@{
    ViewData["Title"] = "User Details";
    ViewData["Subtitle"] = $"Viewing details for {Model.Name}";
}

<div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- User Info Card -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <!-- Header with gradient -->
                <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-32 relative">
                    <div class="absolute -bottom-12 left-1/2 transform -translate-x-1/2">
                        <div class="w-24 h-24 rounded-full border-4 border-white bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center text-white font-bold text-3xl shadow-lg">
                            @Model.Name.Substring(0, 1).ToUpper()
                        </div>
                    </div>
                </div>

                <div class="pt-16 pb-6 px-6 text-center">
                    <h3 class="text-2xl font-bold text-gray-800 mb-1">@Model.Name</h3>
                    <p class="text-gray-600 mb-4">@Model.Email</p>
                    
                    <span class="inline-block px-4 py-2 rounded-full text-sm font-semibold @(Model.UserType == "Speaker" ? "bg-purple-100 text-purple-800" : Model.UserType == "Volunteer" ? "bg-green-100 text-green-800" : "bg-blue-100 text-blue-800")">
                        <i class="fas @(Model.UserType == "Speaker" ? "fa-microphone" : Model.UserType == "Volunteer" ? "fa-hands-helping" : "fa-user") mr-2"></i>
                        @Model.UserType
                    </span>

                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <div class="grid grid-cols-2 gap-4">
                            <div class="text-center">
                                <p class="text-3xl font-bold text-blue-600">@Model.TotalCertificates</p>
                                <p class="text-xs text-gray-600 mt-1">Certificates</p>
                            </div>
                            <div class="text-center">
                                <p class="text-3xl font-bold text-purple-600">@Model.TotalEvents</p>
                                <p class="text-xs text-gray-600 mt-1">Events</p>
                            </div>
                        </div>
                    </div>

                    @if (Model.IsActive)
                    {
                        <div class="mt-6 p-3 bg-green-50 rounded-lg">
                            <i class="fas fa-check-circle text-green-500 mr-2"></i>
                            <span class="text-sm text-green-800 font-medium">Active Account</span>
                        </div>
                    }
                    else
                    {
                        <div class="mt-6 p-3 bg-red-50 rounded-lg">
                            <i class="fas fa-times-circle text-red-500 mr-2"></i>
                            <span class="text-sm text-red-800 font-medium">Inactive Account</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="bg-white rounded-xl shadow-lg p-6 mt-6">
                <h4 class="text-lg font-bold text-gray-800 mb-4">Quick Actions</h4>
                <div class="space-y-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="block w-full px-4 py-3 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition text-center font-medium">
                        <i class="fas fa-edit mr-2"></i>Edit User
                    </a>
                    <a asp-controller="Certificates" asp-action="ByUser" asp-route-userId="@Model.Id" class="block w-full px-4 py-3 bg-purple-50 text-purple-600 rounded-lg hover:bg-purple-100 transition text-center font-medium">
                        <i class="fas fa-certificate mr-2"></i>View Certificates
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="block w-full px-4 py-3 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition text-center font-medium">
                        <i class="fas fa-trash mr-2"></i>Delete User
                    </a>
                </div>
            </div>
        </div>

        <!-- Details Panel -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Contact Information -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-address-card text-blue-500 mr-2"></i>Contact Information
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="p-4 bg-gray-50 rounded-lg">
                        <p class="text-sm text-gray-600 mb-1">Email</p>
                        <p class="font-semibold text-gray-800">@Model.Email</p>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-lg">
                        <p class="text-sm text-gray-600 mb-1">Phone</p>
                        <p class="font-semibold text-gray-800">@(Model.Phone ?? "Not provided")</p>
                    </div>
                    <div class="md:col-span-2 p-4 bg-gray-50 rounded-lg">
                        <p class="text-sm text-gray-600 mb-1">Address</p>
                        <p class="font-semibold text-gray-800">@(Model.Address ?? "Not provided")</p>
                    </div>
                </div>
            </div>

            <!-- Account Information -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-info-circle text-purple-500 mr-2"></i>Account Information
                </h4>
                <div class="space-y-3">
                    <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                        <span class="text-gray-600">User ID</span>
                        <span class="font-semibold text-gray-800">#@Model.Id</span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                        <span class="text-gray-600">Account Type</span>
                        <span class="font-semibold text-gray-800">@Model.UserType</span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                        <span class="text-gray-600">Member Since</span>
                        <span class="font-semibold text-gray-800">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                    </div>
                    <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                        <span class="text-gray-600">Status</span>
                        <span class="font-semibold @(Model.IsActive ? "text-green-600" : "text-red-600")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
            </div>

            <!-- Activity Summary -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-chart-line text-green-500 mr-2"></i>Activity Summary
                </h4>
                <div class="grid grid-cols-2 gap-4">
                    <div class="p-4 bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg">
                        <p class="text-sm text-blue-600 mb-2">Total Certificates</p>
                        <p class="text-3xl font-bold text-blue-700">@Model.TotalCertificates</p>
                    </div>
                    <div class="p-4 bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg">
                        <p class="text-sm text-purple-600 mb-2">Total Events</p>
                        <p class="text-3xl font-bold text-purple-700">@Model.TotalEvents</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-6 flex justify-between">
        <a asp-action="Index" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-medium">
            <i class="fas fa-arrow-left mr-2"></i>Back to List
        </a>
    </div>
</div>
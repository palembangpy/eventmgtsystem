@{
    ViewData["Title"] = "Dashboard";
}

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <!-- Total Users Card -->
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-600 text-sm">Total Users</p>
                <h3 class="text-3xl font-bold text-gray-800">@ViewBag.TotalUsers</h3>
            </div>
            <div class="bg-blue-100 p-4 rounded-full">
                <i class="fas fa-users text-blue-500 text-2xl"></i>
            </div>
        </div>
    </div>

    <!-- Total Events Card -->
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-600 text-sm">Total Events</p>
                <h3 class="text-3xl font-bold text-gray-800">@ViewBag.TotalEvents</h3>
            </div>
            <div class="bg-green-100 p-4 rounded-full">
                <i class="fas fa-calendar text-green-500 text-2xl"></i>
            </div>
        </div>
    </div>

    <!-- Total Certificates Card -->
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-600 text-sm">Total Certificates</p>
                <h3 class="text-3xl font-bold text-gray-800">@ViewBag.TotalCertificates</h3>
            </div>
            <div class="bg-purple-100 p-4 rounded-full">
                <i class="fas fa-certificate text-purple-500 text-2xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Upcoming Events -->
<div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-xl font-bold text-gray-800 mb-4">Upcoming Events</h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Location</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Speaker</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var evt in ViewBag.UpcomingEvents)
                {
                    <tr>
                        <td class="px-6 py-4">@evt.Title</td>
                        <td class="px-6 py-4">@evt.StartDate.ToString("MMM dd, yyyy")</td>
                        <td class="px-6 py-4">@evt.Location</td>
                        <td class="px-6 py-4">@(evt.SpeakerName ?? "TBA")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
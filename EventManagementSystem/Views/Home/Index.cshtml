@model EventManagementSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["Subtitle"] = "Welcome back! Here's what's happening today.";
}

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Users Card -->
    <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition-transform duration-200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-blue-100 text-sm font-medium mb-1">Total Users</p>
                <h3 class="text-4xl font-bold">@Model.TotalUsers</h3>
                <p class="text-blue-100 text-xs mt-2">
                    <i class="fas fa-users mr-1"></i>@Model.ActiveUsers Active
                </p>
            </div>
            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                <i class="fas fa-users text-3xl"></i>
            </div>
        </div>
    </div>

    <!-- Total Events Card -->
    <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition-transform duration-200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-purple-100 text-sm font-medium mb-1">Total Events</p>
                <h3 class="text-4xl font-bold">@Model.TotalEvents</h3>
                <p class="text-purple-100 text-xs mt-2">
                    <i class="fas fa-calendar-check mr-1"></i>@Model.UpcomingEvents Upcoming
                </p>
            </div>
            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                <i class="fas fa-calendar-alt text-3xl"></i>
            </div>
        </div>
    </div>

    <!-- Total Certificates Card -->
    <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition-transform duration-200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-green-100 text-sm font-medium mb-1">Certificates</p>
                <h3 class="text-4xl font-bold">@Model.TotalCertificates</h3>
                <p class="text-green-100 text-xs mt-2">
                    <i class="fas fa-award mr-1"></i>Generated
                </p>
            </div>
            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                <i class="fas fa-certificate text-3xl"></i>
            </div>
        </div>
    </div>

    <!-- Total Participants Card -->
    <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition-transform duration-200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-orange-100 text-sm font-medium mb-1">Participants</p>
                <h3 class="text-4xl font-bold">@Model.TotalParticipants</h3>
                <p class="text-orange-100 text-xs mt-2">
                    <i class="fas fa-user-check mr-1"></i>Total Attendees
                </p>
            </div>
            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                <i class="fas fa-user-friends text-3xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Events by Status -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-chart-pie text-purple-500 mr-2"></i>Events by Status
        </h3>
        <div class="space-y-3">
            @foreach (var stat in Model.EventsByStatus)
            {
                var percentage = Model.TotalEvents > 0 ? (stat.Value * 100 / Model.TotalEvents) : 0;
                var colorClass = stat.Key switch {
                    "Upcoming" => "bg-blue-500",
                    "Ongoing" => "bg-green-500",
                    "Completed" => "bg-gray-500",
                    _ => "bg-red-500"
                };
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-600 font-medium">@stat.Key</span>
                        <span class="text-gray-800 font-bold">@stat.Value</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="@colorClass h-2 rounded-full transition-all duration-500" style="width: @percentage%"></div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Users by Type -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-chart-bar text-blue-500 mr-2"></i>Users by Type
        </h3>
        <div class="space-y-3">
            @foreach (var stat in Model.UsersByType)
            {
                var percentage = Model.TotalUsers > 0 ? (stat.Value * 100 / Model.TotalUsers) : 0;
                var colorClass = stat.Key switch {
                    "Speaker" => "bg-purple-500",
                    "Volunteer" => "bg-green-500",
                    _ => "bg-blue-500"
                };
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-600 font-medium">@stat.Key</span>
                        <span class="text-gray-800 font-bold">@stat.Value</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="@colorClass h-2 rounded-full transition-all duration-500" style="width: @percentage%"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Upcoming Events -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-800 flex items-center">
                <i class="fas fa-calendar-day text-blue-500 mr-2"></i>Upcoming Events
            </h3>
            <a asp-controller="Events" asp-action="Index" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                View All <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="space-y-3">
            @foreach (var evt in Model.RecentEvents)
            {
                <div class="p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition border-l-4 border-blue-500">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <h4 class="font-semibold text-gray-800">@evt.Title</h4>
                            <p class="text-sm text-gray-600 mt-1">
                                <i class="fas fa-map-marker-alt text-gray-400 mr-1"></i>@evt.Location
                            </p>
                            <p class="text-xs text-gray-500 mt-1">
                                <i class="fas fa-clock text-gray-400 mr-1"></i>@evt.StartDate.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <span class="px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                            @evt.DaysUntilEvent days
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Recent Users -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-800 flex items-center">
                <i class="fas fa-user-plus text-green-500 mr-2"></i>Recent Users
            </h3>
            <a asp-controller="Users" asp-action="Index" class="text-green-600 hover:text-green-800 text-sm font-medium">
                View All <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="space-y-3">
            @foreach (var user in Model.RecentUsers)
            {
                var badgeColor = user.UserType switch {
                    "Speaker" => "bg-purple-100 text-purple-800",
                    "Volunteer" => "bg-green-100 text-green-800",
                    _ => "bg-blue-100 text-blue-800"
                };
                <div class="flex items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center text-white font-bold text-sm mr-3">
                        @user.Name.Substring(0, 1).ToUpper()
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="font-medium text-gray-800 truncate">@user.Name</p>
                        <p class="text-xs text-gray-500 truncate">@user.Email</p>
                    </div>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full @badgeColor">
                        @user.UserType
                    </span>
                </div>
            }
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="fixed bottom-8 right-8 space-y-3">
    <a asp-controller="Events" asp-action="Create" class="flex items-center justify-center w-14 h-14 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200">
        <i class="fas fa-plus text-xl"></i>
    </a>
</div>
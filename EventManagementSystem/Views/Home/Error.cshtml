@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="max-w-2xl mx-auto text-center">
    <div class="bg-white rounded-xl shadow-lg p-12">
        <div class="mx-auto w-24 h-24 bg-red-100 rounded-full flex items-center justify-center mb-6">
            <i class="fas fa-exclamation-triangle text-red-600 text-4xl"></i>
        </div>
        
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Oops! Something went wrong</h1>
        <p class="text-gray-600 mb-8">We're sorry, but an error occurred while processing your request.</p>
        
        <div class="flex justify-center space-x-4">
            <a asp-controller="Home" asp-action="Index" class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition font-medium">
                <i class="fas fa-home mr-2"></i>Go to Dashboard
            </a>
            <button onclick="history.back()" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-medium">
                <i class="fas fa-arrow-left mr-2"></i>Go Back
            </button>
        </div>
    </div>
</div>
@model EventManagementSystem.Core.DTO.BulkGenerateCertificatesDto
@{
    ViewData["Title"] = "Bulk Generate Certificates";
    ViewData["Subtitle"] = "Generate multiple certificates at once";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <div class="mx-auto w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center mb-4">
                <i class="fas fa-layer-group text-white text-2xl"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Bulk Generate Certificates</h3>
            <p class="text-gray-600">Select an event and multiple users to generate certificates in bulk</p>
        </div>

        <form asp-action="BulkGenerate" method="post">
            <div asp-validation-summary="ModelOnly" class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg"></div>
            
            <div class="space-y-6">
                <div>
                    <label asp-for="EventScheduleId" class="block text-sm font-medium text-gray-700 mb-2">Select Event *</label>
                    <select asp-for="EventScheduleId" id="eventSelect" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition">
                        <option value="">-- Select an Event --</option>
                        @foreach (var evt in ViewBag.Events)
                        {
                            <option value="@evt.EventScheduleId">@evt.Title (@evt.StartDate.ToString("MMM dd, yyyy"))</option>
                        }
                    </select>
                    <span asp-validation-for="EventScheduleId" class="text-red-600 text-sm mt-1"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Select Users *</label>
                    <div class="border border-gray-300 rounded-lg p-4 max-h-96 overflow-y-auto space-y-2">
                        <div class="mb-3 pb-3 border-b border-gray-200">
                            <label class="flex items-center font-medium text-gray-700 hover:bg-gray-50 p-2 rounded transition">
                                <input type="checkbox" id="selectAll" class="w-5 h-5 text-purple-600 border-gray-300 rounded focus:ring-purple-500" />
                                <span class="ml-3">Select All Users</span>
                            </label>
                        </div>
                        
                        @{
                            var userIndex = 0;
                            foreach (var user in ViewBag.Users)
                            {
                                var badgeColor = user.UserType == "Speaker" ? "bg-purple-100 text-purple-800" : 
                                                user.UserType == "Volunteer" ? "bg-green-100 text-green-800" : 
                                                "bg-blue-100 text-blue-800";
                                
                                <label class="flex items-center hover:bg-gray-50 p-3 rounded-lg transition cursor-pointer">
                                    <input type="checkbox" name="UserIds[@userIndex]" value="@user.Id" class="user-checkbox w-5 h-5 text-purple-600 border-gray-300 rounded focus:ring-purple-500" />
                                    <div class="ml-3 flex-1">
                                        <div class="flex items-center justify-between">
                                            <span class="font-medium text-gray-800">@user.Name</span>
                                            <span class="px-2 py-1 text-xs font-semibold rounded-full @badgeColor">
                                                @user.UserType
                                            </span>
                                        </div>
                                        <span class="text-sm text-gray-600">@user.Email</span>
                                    </div>
                                </label>
                                userIndex++;
                            }
                        }
                    </div>
                    <p class="text-sm text-gray-600 mt-2">
                        <span id="selectedCount">0</span> user(s) selected
                    </p>
                </div>

                <div class="bg-purple-50 border-l-4 border-purple-400 p-4 rounded-r-lg">
                    <div class="flex">
                        <i class="fas fa-info-circle text-purple-600 mt-1 mr-3"></i>
                        <div class="text-sm text-purple-800">
                            <p class="font-semibold mb-1">Bulk Generation Info:</p>
                            <ul class="list-disc list-inside space-y-1">
                                <li>Select multiple users to generate certificates for all at once</li>
                                <li>Each certificate will have a unique certificate number</li>
                                <li>Users who already have a certificate for this event will be skipped</li>
                                <li>Generation progress will be shown after submission</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-8">
                <a asp-action="Index" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-medium">
                    Cancel
                </a>
                <button type="submit" id="generateBtn" class="px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-600 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105 font-medium" disabled>
                    <i class="fas fa-layer-group mr-2"></i>Generate Certificates
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const selectAll = document.getElementById('selectAll');
            const userCheckboxes = document.querySelectorAll('.user-checkbox');
            const selectedCount = document.getElementById('selectedCount');
            const generateBtn = document.getElementById('generateBtn');

            function updateCount() {
                const count = document.querySelectorAll('.user-checkbox:checked').length;
                selectedCount.textContent = count;
                generateBtn.disabled = count === 0;
            }

            selectAll.addEventListener('change', function() {
                userCheckboxes.forEach(cb => cb.checked = this.checked);
                updateCount();
            });

            userCheckboxes.forEach(cb => {
                cb.addEventListener('change', updateCount);
            });

            updateCount();
        });
    </script>
}
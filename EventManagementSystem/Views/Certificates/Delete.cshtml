@model EventManagementSystem.Models.DTO.CertificateDto
@{
    ViewData["Title"] = "Delete Certificate";
    ViewData["Subtitle"] = "Confirm certificate deletion";
}

<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <div class="mx-auto w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mb-4">
                <i class="fas fa-exclamation-triangle text-red-600 text-3xl"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Delete Certificate</h3>
            <p class="text-gray-600">This action will permanently delete this certificate and its PDF file.</p>
        </div>

        <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl p-6 mb-6">
            <div class="flex items-center space-x-4 mb-4">
                <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-certificate text-white text-2xl"></i>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">Certificate Number</p>
                    <p class="font-mono font-bold text-xl text-gray-800">@Model.CertificateNumber</p>
                </div>
            </div>

            <div class="border-t border-gray-200 pt-4 space-y-3">
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Recipient</span>
                    <span class="font-semibold text-gray-800">@Model.UserName</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Email</span>
                    <span class="font-semibold text-gray-800">@Model.UserEmail</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Event</span>
                    <span class="font-semibold text-gray-800 text-right">@Model.EventTitle</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Generated</span>
                    <span class="font-semibold text-gray-800">@Model.GeneratedDate.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Downloads</span>
                    <span class="font-semibold text-gray-800">@Model.DownloadCount times</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Status</span>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full @(Model.Status == "Downloaded" ? "bg-green-100 text-green-800" : "bg-blue-100 text-blue-800")">
                        @Model.Status
                    </span>
                </div>
            </div>
        </div>

        <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg mb-6">
            <div class="flex">
                <i class="fas fa-exclamation-circle text-red-600 mt-1 mr-3"></i>
                <div class="text-sm text-red-800">
                    <p class="font-semibold mb-1">Warning: This action cannot be undone!</p>
                    <ul class="list-disc list-inside space-y-1">
                        <li>The certificate will be permanently removed from the database</li>
                        <li>The PDF file will be deleted from the server</li>
                        <li>The user will no longer be able to access or download this certificate</li>
                        <li>This action cannot be reversed</li>
                    </ul>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <div class="flex justify-end space-x-3">
                <a asp-action="Details" asp-route-id="@Model.CertificateId" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-medium">
                    <i class="fas fa-times mr-2"></i>Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-medium">
                    <i class="fas fa-trash mr-2"></i>Delete Permanently
                </button>
            </div>
        </form>
    </div>
</div>
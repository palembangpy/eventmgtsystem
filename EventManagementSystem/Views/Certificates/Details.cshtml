@model EventManagementSystem.Models.DTO.CertificateDto
@{
    ViewData["Title"] = "Certificate Details";
    ViewData["Subtitle"] = $"Certificate #{Model.CertificateNumber}";
}

<div class="max-w-5xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Certificate Preview -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h3 class="text-xl font-bold text-gray-800 mb-6">Certificate Preview</h3>
                
                <!-- Certificate Card -->
                <div class="border-4 border-blue-500 rounded-xl p-8 bg-gradient-to-br from-blue-50 to-purple-50">
                    <div class="text-center">
                        <div class="mb-6">
                            <i class="fas fa-certificate text-blue-500 text-6xl mb-4"></i>
                            <h2 class="text-3xl font-bold text-gray-800 mb-2">Certificate of Participation</h2>
                            <p class="text-gray-600">Event Management System</p>
                        </div>

                        <div class="my-8">
                            <p class="text-lg text-gray-700 mb-4">This is to certify that</p>
                            <h3 class="text-4xl font-bold text-blue-600 mb-4">@Model.UserName</h3>
                            <p class="text-gray-600 mb-2">@Model.UserEmail</p>
                            <p class="text-lg text-gray-700 mb-4">has successfully participated in</p>
                            <h4 class="text-2xl font-bold text-purple-600 mb-6">@Model.EventTitle</h4>
                        </div>

                        <div class="pt-6 border-t border-gray-300">
                            <p class="text-sm text-gray-600">Certificate Number: <span class="font-mono font-semibold">@Model.CertificateNumber</span></p>
                            <p class="text-sm text-gray-600 mt-1">Generated on: @Model.GeneratedDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>

                <div class="mt-6 flex justify-center space-x-3">
                    <a asp-action="Download" asp-route-id="@Model.CertificateId" class="px-6 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition font-medium">
                        <i class="fas fa-download mr-2"></i>Download PDF
                    </a>
                    <button onclick="window.print()" class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition font-medium">
                        <i class="fas fa-print mr-2"></i>Print
                    </button>
                </div>
            </div>
        </div>

        <!-- Certificate Info -->
        <div class="lg:col-span-1 space-y-6">
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-4">Certificate Information</h4>
                <div class="space-y-3">
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-xs text-gray-600 mb-1">Certificate ID</p>
                        <p class="font-semibold text-gray-800">#@Model.CertificateId</p>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-xs text-gray-600 mb-1">Certificate Number</p>
                        <p class="font-mono font-semibold text-gray-800">@Model.CertificateNumber</p>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-xs text-gray-600 mb-1">Status</p>
                        <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full @(Model.Status == "Downloaded" ? "bg-green-100 text-green-800" : "bg-blue-100 text-blue-800")">
                            @Model.Status
                        </span>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-xs text-gray-600 mb-1">Generated Date</p>
                        <p class="font-semibold text-gray-800">@Model.GeneratedDate.ToString("MMM dd, yyyy")</p>
                        <p class="text-xs text-gray-500">@Model.GeneratedDate.ToString("hh:mm tt")</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-4">Download Statistics</h4>
                <div class="text-center p-6 bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg">
                    <i class="fas fa-download text-blue-500 text-3xl mb-2"></i>
                    <p class="text-4xl font-bold text-blue-700">@Model.DownloadCount</p>
                    <p class="text-sm text-blue-600 mt-1">Total Downloads</p>
                    @if (Model.LastDownloadedAt.HasValue)
                    {
                        <p class="text-xs text-gray-600 mt-2">Last: @Model.LastDownloadedAt.Value.ToString("MMM dd, yyyy")</p>
                    }
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-bold text-gray-800 mb-4">Actions</h4>
                <div class="space-y-2">
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" class="block w-full px-4 py-3 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition text-center font-medium text-sm">
                        <i class="fas fa-user mr-2"></i>View User Profile
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.CertificateId" class="block w-full px-4 py-3 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition text-center font-medium text-sm">
                        <i class="fas fa-trash mr-2"></i>Delete Certificate
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-6">
        <a asp-action="Index" class="inline-block px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-medium">
            <i class="fas fa-arrow-left mr-2"></i>Back to Certificates
        </a>
    </div>
</div>
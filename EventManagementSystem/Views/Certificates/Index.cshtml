@model IEnumerable<EventManagementSystem.Models.DTO.CertificateDto>
@{
    ViewData["Title"] = "Certificates Management";
    ViewData["Subtitle"] = $"Manage all certificates ({ViewBag.TotalCount ?? 0} total)";
}

<!-- Actions Bar -->
<div class="bg-white rounded-xl shadow-lg p-4 mb-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-3 md:space-y-0">
        <form method="get" class="flex space-x-2">
            <input type="text" name="search" value="@ViewBag.SearchTerm" placeholder="Search certificates..." 
                   class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
                <i class="fas fa-search"></i>
            </button>
        </form>

        <div class="flex space-x-2">
            <a asp-action="BulkGenerate" class="px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition">
                <i class="fas fa-layer-group mr-2"></i>Bulk Generate
            </a>
            <a asp-action="Generate" class="px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-lg hover:shadow-lg transition transform hover:scale-105">
                <i class="fas fa-plus mr-2"></i>Generate Certificate
            </a>
        </div>
    </div>
</div>

<!-- Certificates Table -->
<div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-blue-500 to-purple-500">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">Certificate #</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">User</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">Event</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">Generated</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">Downloads</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-right text-xs font-bold text-white uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var cert in Model)
                {
                    var statusColor = cert.Status switch {
                        "Downloaded" => "bg-green-100 text-green-800",
                        "Generated" => "bg-blue-100 text-blue-800",
                        "Sent" => "bg-purple-100 text-purple-800",
                        _ => "bg-gray-100 text-gray-800"
                    };

                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="font-mono text-sm font-semibold text-gray-900">@cert.CertificateNumber</span>
                        </td>
                        <td class="px-6 py-4">
                            <div>
                                <p class="font-medium text-gray-900">@cert.UserName</p>
                                <p class="text-sm text-gray-500">@cert.UserEmail</p>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <p class="text-sm text-gray-900 max-w-xs truncate">@cert.EventTitle</p>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <p class="text-sm text-gray-900">@cert.GeneratedDate.ToString("MMM dd, yyyy")</p>
                            <p class="text-xs text-gray-500">@cert.GeneratedDate.ToString("HH:mm")</p>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <i class="fas fa-download text-blue-500 mr-2"></i>
                                <span class="font-semibold text-gray-900">@cert.DownloadCount</span>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-3 py-1 text-xs font-semibold rounded-full @statusColor">
                                @cert.Status
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex justify-end space-x-2">
                                <a asp-action="Details" asp-route-id="@cert.CertificateId" 
                                   class="text-blue-600 hover:text-blue-900 transition" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Download" asp-route-id="@cert.CertificateId" 
                                   class="text-green-600 hover:text-green-900 transition" title="Download">
                                    <i class="fas fa-download"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@cert.CertificateId" 
                                   class="text-red-600 hover:text-red-900 transition" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="bg-white rounded-xl shadow-lg p-12 text-center">
        <i class="fas fa-certificate text-gray-300 text-6xl mb-4"></i>
        <h3 class="text-xl font-bold text-gray-700 mb-2">No Certificates Found</h3>
        <p class="text-gray-500 mb-6">Generate your first certificate</p>
        <a asp-action="Generate" class="inline-block px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
            <i class="fas fa-plus mr-2"></i>Generate Certificate
        </a>
    </div>
}